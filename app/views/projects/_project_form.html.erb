<%= form_with model: project, method: method, local: true do |f| %>
  <div>
    <div>
      <div>
        <h1 class="text-lg font-medium leading-6 text-gray-900">
          Submit a new project
          <p class="mt-2 text-sm text-gray-500">Help us grow our database üòá</p>
        </h1>
      </div>
      <% if project.errors.any? %>
        <div class="p-4 my-4 rounded-md bg-red-50">
          <div class="flex">
            <div class="shrink-0">
              <svg class="w-5 h-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium leading-5 text-red-800">
                There were <%= project.errors.full_messages.count %> errors with your submission
              </h3>
              <div class="mt-2 text-sm leading-5 text-red-700">
                <ul class="pl-5 list-disc">
                  <%  project.errors.full_messages.each do |msg| %>
                    <li class="mt-1"><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      <div class="grid grid-cols-1 mt-6 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-4">
          <%= f.label :name,"Name*", class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="flex mt-1 rounded-md shadow-sm">
            <%= f.text_field :name, class: "border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm" %>
          </div>
        </div>
        <div class="sm:col-span-4">
          <%= f.label :tag_line, "Tagline*", class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="flex mt-1 rounded-md shadow-sm">
            <%= f.text_field :tag_line, class: "border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">A short one line description of the project üî•.</p>
        </div>
        <div class="sm:col-span-4">
          <%= f.label :description,"About project*", class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 rounded-md shadow-sm">
            <%= f.text_area :description, class:"h-48 form-textarea block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
          </div>
          <p class="mt-2 text-sm text-gray-500">A more detailed description of the project. Markdown works with this one ‚ù§Ô∏è</p>
        </div>
      </div>
    </div>
    <div class="pt-8 mt-8 border-t border-gray-200">
      <div>
        <h3 class="text-lg font-medium leading-6 text-gray-900">
          More information
        </h3>
      </div>
      <div class="grid grid-cols-1 mt-6 gap-y-6 gap-x-4 sm:grid-cols-6">
        <div class="sm:col-span-3">
          <%= f.label :website,"Project website*" , class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 rounded-md shadow-sm">
            <%= f.url_field :website, class: "border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm"%>
            <p class="mt-2 text-sm text-gray-500">URL should start with either http:// or https://</p>
          </div>
        </div>
        <div class="sm:col-span-4">
          <%= f.label :first_release, class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 rounded-md shadow-sm">
            <%= f.date_field :first_release, class: "border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm"%>
          </div>
        </div>
        <div class="sm:col-span-4">
          <%= f.label :last_release, class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 rounded-md shadow-sm">
            <%= f.date_field :last_release, class: "border-gray-300 rounded-md focus:ring-indigo-500 focus:border-indigo-500 sm:max-w-xs sm:text-sm"%>
          </div>
        </div>
        <div class="sm:col-span-4">
          <%= f.label :tags, class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1 rounded-md shadow-sm">
            <%= f.select :tag_ids, Tag.all.collect {|tag| [ tag.name, tag.id ] }, {}, {multiple: true,  "data-target": "selectize.selectInput"}%>
            <p class="mt-2 text-sm text-gray-500">Tags help us with discovering projects</p>
          </div>
        </div>
        <div class="sm:col-span-4">
          <%= f.label :premium, "Premium version offered?", class: "block text-sm font-medium leading-5 text-gray-700" %>
          <div class="mt-1">
            <%= f.label :premium, "Yes", class: "inline-block text-sm font-medium leading-5 text-gray-700" %>
            <%= f.radio_button :premium, "true"%>
            <%= f.label :premium, "No", class: "inline-block text-sm font-medium leading-5 text-gray-700" %>
            <%= f.radio_button :premium, "false", checked: "checked"%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="pt-5 mt-8 border-t border-gray-200">
    <div class="flex justify-end">
      <span class="inline-flex ml-3 rounded-md shadow-sm">
        <%= f.submit submit_text, class:"inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:ring-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
      </span>
    </div>
  </div>
<% end %>
