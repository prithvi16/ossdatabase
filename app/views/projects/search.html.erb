<% content_for(:html_title) { 'Search projects' } %>
<div class="max-w-6xl mx-auto mt-8" data-controller="selectize">
  <div class="pb-5 border-b border-gray-200">
    <div class="-ml-2 -mt-2 flex flex-wrap items-baseline">
      <h3 class="ml-2 mt-2 text-lg leading-6 font-medium text-gray-900">
        Search OSS projects
      </h3>
    </div>
  </div>
  <div class="bg-white overflow-hidden shadow rounded-lg mt-4">
    <div class="px-4 py-5 sm:p-6">
      <%= search_form_for @q, url: projects_search_path do |f| %>
        <div>
          <div>
            <div class="mt-6 grid grid-cols-1 row-gap-6 col-gap-4 sm:grid-cols-6">
              <div class="sm:col-span-3">
                <%= f.label :project_name, class: "block text-sm font-medium leading-5 text-gray-700" %>
                <div class="mt-1 rounded-md shadow-sm">
                  <%= f.search_field :name_or_description_cont, class: "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
                </div>
              </div>
              <div class="sm:col-span-3">
                <%= f.label :project_tags, class: "block text-sm font-medium leading-5 text-gray-700" %>
                <div class="mt-1 rounded-md shadow-sm">
                  <%= f.select :tags_id_in, Tag.all.collect {|tag| [ tag.name, tag.id ] }, {}, {multiple: true,  "data-target": "selectize.selectInput"} %>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="mt-8 pt-5">
          <div class="flex justify-end">
            <span class="ml-3 inline-flex rounded-md shadow-sm">
              <%= f.submit "Search", class: "inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition ease-in-out duration-150" %>
            </span>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= render partial: "projects/projects_list", locals: {projects_list: @projects} %>
</div>
