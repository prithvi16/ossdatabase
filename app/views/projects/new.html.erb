<div class="max-w-6xl mx-auto mt-8" data-controller="selectize">
  <%= form_with model: @project, method: :post, local: true do |f| %>
    <div>
      <div>
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            Post a new project
          </h3>
          <p class="mt-1 text-sm leading-5 text-gray-500">
            This information will be displayed publicly so be careful what you share.
          </p>
        </div>
        <% if @project.errors.any? %>
          <div class="rounded-md bg-red-50 p-4 my-4">
            <div class="flex">
              <div class="flex-shrink-0">
                <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
              </div>
              <div class="ml-3">
                <h3 class="text-sm leading-5 font-medium text-red-800">
                  There were <%= @project.errors.full_messages.count %> errors with your submission
                </h3>
                <div class="mt-2 text-sm leading-5 text-red-700">
                  <ul class="list-disc pl-5">
                    <%  @project.errors.full_messages.each do |msg| %>
                      <li class="mt-1"><%= msg %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="mt-6 grid grid-cols-1 row-gap-6 col-gap-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= f.label :name, class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1 flex rounded-md shadow-sm">
              <%= f.text_field :name, class: "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
            </div>
          </div>
          <div class="sm:col-span-6">
            <%= f.label :description,"project description", class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.text_area :description, class:"form-textarea block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5" %>
            </div>
            <p class="mt-2 text-sm text-gray-500">Write a few sentences about project.</p>
          </div>
        </div>
      </div>
      <div class="mt-8 border-t border-gray-200 pt-8">
        <div>
          <h3 class="text-lg leading-6 font-medium text-gray-900">
            More information
          </h3>
          <p class="mt-1 text-sm leading-5 text-gray-500">
            Use a permanent address where you can receive mail.
          </p>
        </div>
        <div class="mt-6 grid grid-cols-1 row-gap-6 col-gap-4 sm:grid-cols-6">
          <div class="sm:col-span-3">
            <%= f.label :website,"Project website" , class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.url_field :website, class: "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5"%>
            </div>
          </div>
          <div class="sm:col-span-4">
            <%= f.label :first_release, class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.date_field :first_release, class: "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5"%>
            </div>
          </div>
          <div class="sm:col-span-4">
            <%= f.label :last_release, class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.date_field :last_release, class: "form-input block w-full transition duration-150 ease-in-out sm:text-sm sm:leading-5"%>
            </div>
          </div>
          <div class="sm:col-span-4">
            <%= f.label :tags, class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.select :tag_ids, Tag.all.collect {|tag| [ tag.name, tag.id ] }, {}, {multiple: true,  "data-target": "selectize.selectInput"}%>
            </div>
          </div>
          <div class="sm:col-span-4">
            <%= f.label :premium, class: "block text-sm font-medium leading-5 text-gray-700" %>
            <div class="mt-1">
              <%= f.label :premium, "Yes", class: "block text-sm font-medium leading-5 text-gray-700" %>
              <%= f.radio_button :premium, "true"%>
              <%= f.label :premium, "No", class: "block text-sm font-medium leading-5 text-gray-700" %>
              <%= f.radio_button :premium, "false", checked: "checked"%>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="mt-8 border-t border-gray-200 pt-5">
      <div class="flex justify-end">
        <span class="ml-3 inline-flex rounded-md shadow-sm">
          <%= f.submit "Create project", class:"inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:shadow-outline-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
        </span>
      </div>
    </div>
  <% end %>
</div>
