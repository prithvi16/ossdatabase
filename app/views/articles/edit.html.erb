<!-- This example requires Tailwind CSS v2.0+ -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- We've used 3xl here, but feel free to try other max-widths based on your needs -->
  <div class="max-w-3xl mx-auto">
    <h2 class="text-2xl font-semibold leading-tight text-gray-900 mt-20">
      Edit Article
    </h2>
    <%= form_with model: @article, method: :post, path: update_article_path(@article), class:"my-20"  do |f| %>
      <%= f.label :title, class: "block text-sm font-medium leading-5 text-gray-700"  %>
      <div class="flex mt-1 rounded-md shadow-sm">
        <%= f.text_field :title, class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
      </div>
      <%= f.label :content , class: "block text-sm font-medium leading-5 text-gray-700"%>
      <%= f.hidden_field :content %>
      <trix-editor input="article_content"></trix-editor>
      <div class="mt-2">
        <%= f.submit "Update Post", class: "inline-flex justify-center py-2 px-4 border border-transparent text-sm leading-5 font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-500 focus:outline-none focus:border-indigo-700 focus:ring-indigo active:bg-indigo-700 transition duration-150 ease-in-out" %>
      </div>
    <% end  %>
  </div>
</div>
