<% title 'Open source alternatives to popular software' %>
<% set_meta_tags og: { title: "Open source alternatives to popular software", 
                       description: 'Open source alternatives to popular software', 
                       image: BANNER_IMAGE_URL,
                       type: "website",
                       url: root_url},
                 canonical: root_url %>
<% description 'Search for open source projects, submit open source projects' %>
<main class="bg-[#ffd700]">
  <div class="flex flex-col items-center justify-center w-full pt-16 pb-20 mx-auto text-center max-w-7xl lg:py-14 lg:text-left md:flex-row">
    <div class="px-4 lg:w-1/2 sm:px-8 xl:pr-16">
      <h1 class="text-4xl font-extrabold leading-10 tracking-tight text-gray-900 sm:text-5xl sm:leading-none md:text-6xl lg:text-5xl xl:text-6xl">
        Find open source alternatives
      </h1>
      <p class="max-w-md mx-auto mt-3 text-lg text-gray-800 sm:text-xl md:mt-5 md:max-w-3xl">
        <span class="px-2 font-semibold tracking-tight text-gray-800 border-2 border-gray-800 ">OSS DATABASE</span> is a crowdsourced database of Open Source software. Our goal is to make it easy to look for open source alternatives and compare them with their proprietary peers.
      </p>
    </div>
    <div class="mt-10 sm:flex sm:justify-center lg:justify-start">
      <div class="rounded-md shadow">
        <%= link_to projects_browse_path, class:"w-full flex items-center justify-center px-8 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:border-indigo-700 focus:ring-indigo transition duration-150 ease-in-out md:py-4 md:text-lg md:px-10" do%>
          Browse Projects
        <%end%>
      </div>
      <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
        <%= link_to "#search", class:"w-full flex items-center justify-center px-8 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:border-indigo-700 focus:ring-indigo transition duration-150 ease-in-out md:py-4 md:text-lg md:px-10"  do%>
          Search Projects
        <% end %>
      </div>
    </div>
  </div>
</main>
<div class="bg-blue-500" data-controller="search" id="search">
  <div class="max-w-3xl px-4 pt-16 mx-auto sm:px-6 sm:pt-20 lg:max-w-6xl lg:pt-24 lg:px-8">
    <h2 class="text-3xl font-extrabold text-white">Search for Open Source Projects</h2>
    <div class="pt-5">
      <%= form_with url: root_path, data: {"search-target": "form", 'turbo-frame': 'search-results'}, method: "GET" do |f| %>
        <div>
          <div class="mt-2">
            <%= f.text_field :pg_search_by_name ,class:"block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg", placeholder:"Search for projects by name", data: { "action": "input->search#triggerSearch" } %>
          </div>
        </div>
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-4">
          <div class="mt-3">
            <%= f.label :license_tag_ids, "Filter by license", class: "block font-medium leading-5 text-white" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.select :license_tag_ids, options_for_select(@license_tag_options, :license_tag_ids), {}, {multiple: true,  class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Select tags to filter projects" ,"data-search-target": "selectLicenseInput"}%>
            </div>
          </div>
          <div class="mt-3">
            <%= f.label :tech_tag_ids, "Filter by tech", class: "block font-medium leading-5 text-white" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.select :tech_tag_ids, options_for_select(@tech_tag_options, :tech_tag_ids), {}, {multiple: true,  class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Select tags to filter projects" ,"data-search-target": "selectTechInput"}%>
            </div>
          </div>
          <div class="mt-3">
            <%= f.label :usecase_tag_ids, "Filter by usecase", class: "block font-medium leading-5 text-white" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.select :usecase_tag_ids, options_for_select(@usecase_tag_options, :usecase_tag_ids), {}, {multiple: true,  class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Select tags to filter projects" ,"data-search-target": "selectUsecaseInput"}%>
            </div>
          </div>
          <div class="mt-3">
            <%= f.label :platform_tag_ids, "Filter by platform", class: "block font-medium leading-5 text-white" %>
            <div class="mt-1 rounded-md shadow-sm">
              <%= f.select :platform_tag_ids, options_for_select(@platform_tag_options, :platform_tag_ids), {}, {multiple: true,  class: "block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Select tags to filter projects" ,"data-search-target": "selectPlatformInput"}%>
            </div>
          </div>
        </div>
        <div class="mt-3">
          <%= f.label :proprietary, "Open Source only?", class: "block  font-medium leading-5 text-white" %>
          <div class="">
            <%= f.label :proprietary, "Yes", class: "inline-block font-medium leading-5 text-white" %>
            <%= f.check_box :proprietary, {"data-action": "change->search#triggerSearch"}%>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <%= render partial: "pages/search_results", locals: {projects: @projects}%>
</div>
<div class="bg-blue-500">
  <div class="max-w-3xl px-4 pt-16 mx-auto sm:px-6 sm:pt-20 lg:max-w-6xl lg:pt-24 lg:px-8">
    <h2 class="text-3xl font-extrabold text-white">Alternatives To Proprietary Software</h2>
    <div class="mt-12 lg:mt-16">
      <%= render(ProjectListComponent.new(project_list: Project.order(updated_at: :desc).where(proprietary: true).limit(20))) %>
    </div>
  </div>
</div>
<%= render NewsLetterComponent.new %>
