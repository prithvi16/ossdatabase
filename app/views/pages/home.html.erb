<% title 'Home' %>
<% set_meta_tags og: { title: "Open source alternatives to popular projects", 
                       description: 'Open source alternatives to popular projects', 
                       image: BANNER_IMAGE_URL,
                       type: "website",
                       url: root_url},
                 canonical: root_url %>
<% description 'Search for open source projects, submit open source projects' %>
<main class="bg-[#ffd700]">
  <div class="flex flex-col items-center justify-center w-full pt-16 pb-20 mx-auto text-center max-w-7xl lg:py-48 lg:text-left md:flex-row">
    <div class="px-4 lg:w-1/2 sm:px-8 xl:pr-16">
      <h1 class="text-4xl font-extrabold leading-10 tracking-tight text-gray-900 sm:text-5xl sm:leading-none md:text-6xl lg:text-5xl xl:text-6xl">
        Find open source alternatives
      </h1>
      <p class="max-w-md mx-auto mt-3 text-lg text-gray-800 sm:text-xl md:mt-5 md:max-w-3xl">
        <span class="px-2 font-semibold tracking-tight text-gray-800 border-2 border-gray-800 ">OSS DATABASE</span> is a crowdsourced database of Open Source software. Our goal is to make it easy to look for open source alternatives and compare them with their proprietary peers.
      </p>
      <div class="mt-10 sm:flex sm:justify-center lg:justify-start">
        <div class="rounded-md shadow">
          <%= link_to projects_browse_path, class:"w-full flex items-center justify-center px-8 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:border-indigo-700 focus:ring-indigo transition duration-150 ease-in-out md:py-4 md:text-lg md:px-10" do%>
            Browse Projects
          <%end%>
        </div>
        <div class="mt-3 rounded-md shadow sm:mt-0 sm:ml-3">
          <%= link_to "#search", class:"w-full flex items-center justify-center px-8 py-3 border border-transparent text-base leading-6 font-medium rounded-md text-white bg-blue-500 hover:bg-blue-600 focus:outline-none focus:border-indigo-700 focus:ring-indigo transition duration-150 ease-in-out md:py-4 md:text-lg md:px-10"  do%>
            Search Projects
          <% end %>
        </div>
      </div>
    </div>
  </div>
</main>
<!-- This example requires Tailwind CSS v2.0+ -->
<div class="bg-blue-500" data-controller="search" id="search">
  <div class="max-w-4xl px-4 py-16 mx-auto sm:px-6 sm:pt-20 sm:pb-24 lg:max-w-7xl lg:pt-24 lg:px-8">
    <h2 class="text-3xl font-extrabold text-white">Search for Open Source Projects</h2>
    <div class="py-5">
      <%= form_for @q, url: projects_search_path, remote: true, data: {"search-target": "form", 'action': 'ajax:success->search#renderResults'}, method: "GET" do |f| %>
        <div>
          <div class="mt-1">
            <%= f.search_field :name, class:"block w-full border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-lg", placeholder:"Search for projects by name", data: { "action": "input->search#triggerSearch" } %>
          </div>
        </div>
      </div>
    <% end %>
    <div class="mt-12 lg:mt-16" data-search-target="resultParent">
      <%= render(ProjectListComponent.new(project_list: @projects)) %>
    </div>
  </div>
</div>
