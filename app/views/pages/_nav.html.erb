<nav class="bg-white shadow" data-controller="dropdown">
  <div class="px-4 mx-auto max-w-7xl sm:px-6 lg:px-8">
    <div class="flex md:justify-between justify-between py-2 items-center">
      <div class="flex">
        <div class="flex items-center mr-2 -ml-2 md:hidden">
          <!-- Mobile menu button -->
          <button id="mobile_menu_button" class="inline-flex items-center justify-center p-2 text-gray-400 transition duration-150 ease-in-out rounded-md hover:text-gray-500 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 focus:text-gray-500" aria-label="Main menu" aria-expanded="false">
            <!-- Icon when menu is closed. -->
            <!-- Menu open: "hidden", Menu closed: "block" -->
            <svg class="block w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <!-- Icon when menu is open. -->
            <!-- Menu open: "block", Menu closed: "hidden" -->
            <svg class="hidden w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>
        </div>
        <div class="flex items-center justify-center shrink-0">
          <%= link_to "OSS DATABASE" ,root_path, class: "block w-auto h-6 sm:h-8 px-2 text-sm sm:text-lg font-semibold tracking-tight text-gray-800 border-2 border-gray-800"  %>
        </div>
      </div>
      <div class="flex items-center gap-x-2">
        <%= form_with method: :get, url: nav_search_url, local: true, data: {"controller": "nav-search", "nav-search-target": "form"} do |f| %>
          <div class="flex-1 flex items-center justify-center px-2 lg:ml-6 lg:justify-end">
            <div class="max-w-lg w-full lg:max-w-xs">
              <label for="search" class="sr-only">Search</label>
              <div class="relative inline-block">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <!-- Heroicon name: solid/search -->
                  <svg class="h-3 w-3 sm:h-5 sm:w-5 text-gray-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                    <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
                  </svg>
                </div>
                <%= f.text_field :pg_search_by_name, class: "block w-full sm:pl-10 pl-7 sm:pr-3 pr-2 sm:py-2 py-1 border border-gray-300 rounded-md leading-5 bg-white placeholder-gray-500 focus:outline-none focus:placeholder-gray-400 focus:ring-1 focus:ring-indigo-500 focus:border-indigo-500 text-xs sm:text-sm", autocomplete: "off", spellcheck: "false", autocorrect: "off" ,autocapitalize: "off" ,placeholder: "Press enter to search", data: {action: "input->nav-search#triggerSearch"} %>
                <div data-nav-search-target="resultParent" class="-z-10 opacity-0 origin-top-left absolute w-64 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 divide-y divide-gray-100 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="menu-button" tabindex="-1">
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <div class="hidden sm:block">
          <%= link_to open_source_alternatives_path do %>
            <button type="button" class="relative inline-flex items-center px-2 py-1 text-xs font-medium leading-5 text-white transition duration-150 ease-in-out bg-blue-500 border border-transparent rounded-md shadow-sm md:px-4 md:py-2 md:text-sm hover:bg-blue-700 focus:outline-none focus:border-blue-700 focus:ring-indigo active:bg-blue-700">
              <span>Browse Projects</span>
            </button>
          <% end %>
        </div>
        <div class="hidden sm:block">
          <%= link_to new_submission_path do %>
            <button type="button" class="relative inline-flex items-center px-2 py-1 text-xs font-medium leading-5 text-white transition duration-150 ease-in-out bg-blue-500 border border-transparent rounded-md shadow-sm md:px-4 md:py-2 md:text-sm hover:bg-blue-700 focus:outline-none focus:border-blue-700 focus:ring-indigo active:bg-blue-700">
              <span>Submit a Project</span>
            </button>
          <% end %>
        </div>
        <div class="hidden md:shrink-0 md:flex md:items-center">
          <!-- Profile dropdown -->
          <div class="relative ml-3">
            <% if user_signed_in? %>
              <div data-action="click->dropdown#toggle click@window->dropdown#hide">
                <button class="relative inline-flex items-center px-4 py-2 text-sm font-medium leading-5 text-white transition duration-150 ease-in-out bg-blue-500 border border-transparent rounded-md shadow-sm hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:ring-indigo active:bg-blue-700" id="user-menu" aria-label="User menu" aria-haspopup="true">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg>
                </button>
              <% else %>
                <%= link_to new_user_session_path do%>
                  <button type="button" class="relative inline-flex items-center px-4 py-2 text-sm font-medium leading-5 text-white transition duration-150 ease-in-out bg-blue-500 border border-transparent rounded-md shadow-sm hover:bg-blue-500 focus:outline-none focus:border-blue-700 focus:ring-indigo active:bg-blue-700">
                    <span>Sign In</span>
                  </button>
                <% end %>
              <% end %>
            </div>
            <!--
              Profile dropdown panel, show/hide based on dropdown state.

              Entering: "transition ease-out duration-200"
                From: "transform opacity-0 scale-95"
                To: "transform opacity-100 scale-100"
              Leaving: "transition ease-in duration-75"
                From: "transform opacity-100 scale-100"
                To: "transform opacity-0 scale-95"
            -->
            <% if user_signed_in? %>
              <div class="absolute right-0 hidden w-48 mt-2 origin-top-right rounded-md shadow-lg" data-target="dropdown.menu">
                <div class="py-1 bg-white rounded-md ring-1 ring-black ring-opacity-5" role="menu" aria-orientation="vertical" aria-labelledby="user-menu">
                  <%= link_to "Account settings" , edit_user_registration_path,class: "block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 transition duration-150 ease-in-out"%>
                  <% if current_user.admin? %>
                    <%= link_to "Admin Dashboard", admin_dashboard_path, class: "block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 transition duration-150 ease-in-out" %>
                  <% end %>
                  <%= link_to "Sign out" , destroy_user_session_path,class: "block px-4 py-2 text-sm leading-5 text-gray-700 hover:bg-gray-100 focus:outline-none focus:bg-gray-100 transition duration-150 ease-in-out", method: "delete"%>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--
    Mobile menu, toggle classes based on menu state.

    Menu open: "block", Menu closed: "hidden"
  -->
  <div class="hidden md:hidden" id="mobile_menu">
    <div class="pt-2 pb-3">
      <%= link_to "Search projects", root_path + "#search" , class: "mt-1 block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300 focus:outline-none focus:text-gray-800 focus:bg-gray-50 focus:border-gray-300 transition duration-150 ease-in-out sm:pl-5 sm:pr-6"%>
      <%= link_to "Browse projects", projects_browse_path, class: "mt-1 block pl-3 pr-4 py-2 border-l-4 border-transparent text-base font-medium text-gray-600 hover:text-gray-800 hover:bg-gray-50 hover:border-gray-300 focus:outline-none focus:text-gray-800 focus:bg-gray-50 focus:border-gray-300 transition duration-150 ease-in-out sm:pl-5 sm:pr-6"%>
    </div>
    <div class="pt-4 pb-3 border-t border-gray-200">
      <div class="mt-3">
        <% if user_signed_in? %>
          <%= link_to "Account settings",edit_user_registration_path, class:"mt-1 block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100 focus:outline-none focus:text-gray-800 focus:bg-gray-100 transition duration-150 ease-in-out sm:px-6" %>
          <%= link_to "Sign Out", destroy_user_session_path,method: "delete", class:"mt-1 block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100 focus:outline-none focus:text-gray-800 focus:bg-gray-100 transition duration-150 ease-in-out sm:px-6" %>
          <% if current_user.admin? %>
            <%= link_to "Admin Dashboard", admin_dashboard_path, class:"mt-1 block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100 focus:outline-none focus:text-gray-800 focus:bg-gray-100 transition duration-150 ease-in-out sm:px-6" %>
          <% end %>
        <% else %>
          <%= link_to "Sign In", new_user_session_path, class:"mt-1 block px-4 py-2 text-base font-medium text-gray-500 hover:text-gray-800 hover:bg-gray-100 focus:outline-none focus:text-gray-800 focus:bg-gray-100 transition duration-150 ease-in-out sm:px-6" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
