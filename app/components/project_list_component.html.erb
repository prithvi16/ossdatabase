<div class="bg-white shadow overflow-hidden sm:rounded-md mt-3">
  <ul>
    <% @project_list.each do |project| %>
      <li>
        <%=link_to project_path(project),  class: "block hover:bg-gray-50 focus:outline-none focus:bg-gray-50 transition duration-150 ease-in-out" do %>
          <div class="px-4 py-4 sm:px-6">
            <div class="flex items-center justify-between">
              <div class="text-sm leading-5 font-medium text-indigo-600 truncate">
                <%= project.name %>
              </div>
              <div class="ml-2 flex-shrink-0 flex">
                <% project.tags.each do |tag| %>
                  <%= link_to(tag_show_path(tag.name)) do %>
                    <span class="px-3 mx-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-<%= TAILWIND_COLOURS.sample %>-300 text-white-800">
                      <%= tag.name %>
                    </span>
                  <% end %>
                <% end %>
              </div>
            </div>
            <div class="mt-2 sm:flex sm:justify-between">
              <div class="sm:flex">
                <div class="mr-6 flex items-center text-sm leading-5 text-gray-500">
                  <svg class="flex-shrink-0 mr-1.5 h-5 w-5 text-gray-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                  </svg>
                  First release: <%= first_release(project) %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
<nav class="bg-white px-4 py-3 flex items-center justify-between border-t border-gray-200 sm:px-6">
  <div class="hidden sm:block">
    <p class="text-sm leading-5 text-indigo-600">
      <%= paginate @project_list %>
    </p>
  </div>
</nav>
