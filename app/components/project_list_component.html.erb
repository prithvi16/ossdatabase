<div class="max-w-5xl pb-8 mx-auto mt-3">
  <%if @project_list.empty? %>
    <div class="m-8 text-sm font-medium leading-5 text-center text-white truncate">
      No projects found
    </div>
  <% else %>
    <ul class="grid grid-cols-1 gap-4 sm:grid-cols-2">
      <% @project_list.each do |project| %>
        <li class="max-w-xl col-span-1 bg-white rounded-lg shadow-lg">
          <%= link_to project_path(project), class: "block hover:bg-gray-50", target: "_blank" do %>
            <div class="px-4 py-4 sm:px-6">
              <div class="flex">
                <% if project.avatar.attached? %>
                  <div class="mr-2">
                    <img class="inline-block object-contain w-12 h-12 rounded-md" src=<%= project.avatar.url %> alt="">
                  </div>
                <% end %>
                <div>
                  <div class="flex items-center justify-between">
                    <div class="text-sm font-medium leading-5 text-blue-600 truncate">
                      <%= project.name %>
                    </div>
                  </div>
                  <div class="mt-1 sm:flex sm:justify-between">
                    <div class="sm:flex">
                      <div class="flex items-center mr-6 text-sm leading-5 text-gray-500">
                        <%= project.tag_line %>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="mt-1 text-sm text-gray-900">
                <%= render TagListComponent.new(tag_list: project.usecase_tags) %>
              </div>
              <% if project.github_stars.present? %>
                <div class="flex mt-2 text-sm text-amber-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  <%= number_to_human(project.github_stars, :format => '%n%u', :units => { thousand: 'K' }) %>
                </div>
              <% end %>
              <div class="mt-1 text-sm text-gray-900">
                <% if project.proprietary? %>
                  <span class="inline-flex items-center text-white px-1.5 py-0.5 rounded text-xs uppercase bg-blue-500 ">
                    Proprietory
                  </span>
                <% else %>
                  <%= render TagListComponent.new(tag_list: project.license_tags) %>
                <% end %>
              </div>
              <div class="mt-2">
                <button type="button" class="inline-flex items-center px-2.5 py-1.5 border border-transparent text-xs font-medium rounded text-indigo-700 bg-indigo-100 hover:bg-indigo-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Open alternatives <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 ml-1" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M11 3a1 1 0 100 2h2.586l-6.293 6.293a1 1 0 101.414 1.414L15 6.414V9a1 1 0 102 0V4a1 1 0 00-1-1h-5z" />
                    <path d="M5 5a2 2 0 00-2 2v8a2 2 0 002 2h8a2 2 0 002-2v-3a1 1 0 10-2 0v3H5V7h3a1 1 0 000-2H5z" />
                  </svg>
                </button>
              </div>
            </div>
          <% end %>
        </li>
      <% end %>
    </ul>
  <% end %>
  <% if @project_list.respond_to?(:total_pages) && @project_list.total_pages > 1 %>
    <nav class="flex justify-center max-w-5xl px-4 py-3 mx-auto mt-4 mb-5 bg-white rounded-lg shadow-lg sm:px-6 ">
      <p class="inline-block text-sm">
        <%= paginate @project_list %>
      </p>
    </nav>
  <% end %>
</div>
